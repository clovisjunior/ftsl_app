<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HorÃ¡rio"
        android:id="@+id/grid_item_schedule"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/backgroud_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Titulo"
        android:id="@+id/grid_item_title"
        android:layout_below="@+id/grid_item_schedule"
        android:layout_alignLeft="@+id/grid_item_schedule"
        android:layout_marginTop="3dp"
        android:layout_marginRight="52dp"
        android:textColor="@color/action_bar_ftsl"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Autor"
        android:id="@+id/grid_item_author"
        android:layout_below="@+id/grid_item_title"
        android:layout_alignLeft="@+id/grid_item_title"
        android:layout_marginTop="3dp"
        android:textColor="@color/backgroud_user"
        android:layout_marginRight="52dp"
        android:textStyle="italic"
        android:editable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_item_calendar"
        android:src="@drawable/calendar_check"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>